{
  "scripts": {
    "build": "browserify src/main.js --external react --external react-dom -o bundle.js -t [ browserify-shim ]",
    "prerender": "babel lib/ --presets=babel-preset-es2015,babel-preset-react --out-dir src/",
    "prebuild": "npm run render",
    "render": "node src/server-render.js",
    "watch:js": "onchange lib/**/*.es6 -- npm run build",
    "watch:scss": "onchange lib/**/*.es6 -- npm run build",
    "watch": "npm run watch:js & npm run watch:scss",
    "develop": "lite-server & npm run watch"
  },
  "browserify-shim": {
    "react": "global:React",
    "react-dom": "global:ReactDOM"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "lite-server": "^2.2.2",
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "browserify-shim": "^3.8.12",
    "node-sass": "^4.3.0",
    "onchange": "^3.2.1"
  }
}
